<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/TitleScreen">

    <fragment
        android:id="@+id/TitleScreen"
        android:name="com.example.doggoscopes.FirstFragment"
        android:label="@string/title_label"
        tools:layout="@layout/title_screen">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/ResultPage" />
    </fragment>
    <fragment
        android:id="@+id/ResultPage"
        android:name="com.example.doggoscopes.SecondFragment"
        android:label="@string/result_label"
        tools:layout="@layout/result_page">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/TitleScreen" />
    </fragment>
</navigation>