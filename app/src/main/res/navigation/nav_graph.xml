<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/TitleScreen">

    <fragment
        android:id="@+id/TitleScreen"
        android:name="com.example.doggoscopes.FirstFragment"
        android:label="TitleScreen"
        tools:layout="@layout/title_screen">

        <action
            android:id="@+id/action_FirstFragment_to_GeminiFragment"
            app:destination="@id/GeminiPage" />

        <action
            android:id="@+id/action_FirstFragment_to_TaurusFragment"
            app:destination="@id/TaurusPage" />

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/ResultPage" />
    </fragment>

    <fragment
        android:id="@+id/ResultPage"
        android:name="com.example.doggoscopes.SecondFragment"
        android:label="@string/result_label"
        tools:layout="@layout/result_page">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/TitleScreen" />
    </fragment>

    <fragment
        android:id="@+id/TaurusPage"
        android:name="com.example.doggoscopes.TaurusFragment"
        android:label="TaurusPage"
        tools:layout="@layout/fragment_taurus">

        <action
            android:id="@+id/action_TaurusFragment_to_FirstFragment"
            app:destination="@id/TitleScreen" />
    </fragment>

    <fragment
        android:id="@+id/GeminiPage"
        android:name="com.example.doggoscopes.GeminiFragment"
        android:label="GeminiPage"
        tools:layout="@layout/fragment_gemini">

        <action
            android:id="@+id/action_GeminiFragment_to_FirstFragment"
            app:destination="@id/TitleScreen" />
    </fragment>


</navigation>